---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional residential snow removal services in North York, Richmond Hill, Markham, Vaughan, and Scarborough. Making snow disappear like magic!" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | The Blizzard Wizard</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="font-sans antialiased bg-white text-gray-900">
  
  <!-- Header -->
  <header 
    x-data="{ mobileMenuOpen: false, scrolled: false }" 
    @scroll.window="scrolled = window.pageYOffset > 20"
    :class="scrolled ? 'bg-white/95 backdrop-blur-lg shadow-lg' : 'bg-white'"
    class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  >
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-3 group">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-winter-500 rounded-2xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity"></div>
            <div class="relative bg-gradient-to-br from-primary-600 to-winter-500 p-3 rounded-2xl transform group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </div>
          </div>
          <div>
            <div class="text-xl font-bold bg-gradient-to-r from-primary-600 to-winter-600 bg-clip-text text-transparent">
              The Blizzard Wizard
            </div>
            <div class="text-xs text-gray-500 italic">Making Snow Disappear Like Magic</div>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-1">
          <a href="/" class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${currentPath === '/' ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}`}>
            Home
          </a>
          <a href="/services" class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${currentPath === '/services' ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}`}>
            Services
          </a>
          <a href="/locations" class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${currentPath === '/locations' ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}`}>
            Locations
          </a>
          <a href="/about" class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${currentPath === '/about' ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}`}>
            About
          </a>
          <a href="/contact" class="ml-4 px-6 py-2.5 bg-gradient-to-r from-primary-600 to-winter-600 text-white font-semibold rounded-full hover:shadow-lg hover:scale-105 transform transition-all duration-200">
            Get Quote
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button 
          @click="mobileMenuOpen = !mobileMenuOpen"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div 
        x-show="mobileMenuOpen" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-y-2"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 -translate-y-2"
        class="md:hidden py-4 border-t"
      >
        <div class="flex flex-col space-y-2">
          <a href="/" class="px-4 py-3 rounded-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors">Home</a>
          <a href="/services" class="px-4 py-3 rounded-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors">Services</a>
          <a href="/locations" class="px-4 py-3 rounded-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors">Locations</a>
          <a href="/about" class="px-4 py-3 rounded-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors">About</a>
          <a href="/contact" class="mx-4 mt-2 px-6 py-3 bg-gradient-to-r from-primary-600 to-winter-600 text-white font-semibold rounded-full text-center hover:shadow-lg transition-all">
            Get Quote
          </a>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="pt-20">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
        
        <!-- Company Info -->
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <div class="bg-gradient-to-br from-primary-500 to-winter-500 p-2.5 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-lg">The Blizzard Wizard</div>
            </div>
          </div>
          <p class="text-gray-400 leading-relaxed">
            Professional residential snow removal services across the Greater Toronto Area.
          </p>
          <p class="text-winter-400 italic font-medium">
            ✨ Making Snow Disappear Like Magic
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="font-bold text-lg mb-4">Quick Links</h3>
          <ul class="space-y-3">
            <li><a href="/" class="text-gray-400 hover:text-white transition-colors">Home</a></li>
            <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Services</a></li>
            <li><a href="/locations" class="text-gray-400 hover:text-white transition-colors">Locations</a></li>
            <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About</a></li>
            <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
          </ul>
        </div>

        <!-- Service Areas -->
        <div>
          <h3 class="font-bold text-lg mb-4">Service Areas</h3>
          <ul class="space-y-3 text-gray-400">
            <li>North York</li>
            <li>Richmond Hill</li>
            <li>Markham</li>
            <li>Vaughan</li>
            <li>Scarborough</li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h3 class="font-bold text-lg mb-4">Contact</h3>
          <ul class="space-y-3">
            <li class="flex items-center space-x-3 text-gray-400">
              <svg class="w-5 h-5 text-winter-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>(416) 555-SNOW</span>
            </li>
            <li class="flex items-center space-x-3 text-gray-400">
              <svg class="w-5 h-5 text-winter-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>info@blizzardwizard.ca</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="mt-12 pt-8 border-t border-gray-800">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
          <p class="text-gray-400 text-sm">
            © {new Date().getFullYear()} The Blizzard Wizard. All rights reserved.
          </p>
          <div class="flex items-center space-x-6">
            <a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a>
          </div>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>
